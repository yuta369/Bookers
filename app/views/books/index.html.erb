<h1>Books</h1>
<div class="table-m">
<table>
  <tr>
    <th class="th-title"><h4>Title</h4></th>
    <th class="th-body"><h4>Body</h4></th>
  </tr>
  <% if Book.all %>
  
    <% Book.all.each do |book| %>
      <tr>
        <td class="th-title"><%= book.title %></td>
        <td class="th-body"><%= book.body %>
        <td>
          <%= link_to 'Show' , book_path(book.id) %>
          <%= link_to 'Edit' , edit_book_path(book.id) %>
          <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
</table>
  <% else %>
    <%= p "まだ投稿されていません" %>
  <% end %>
</div>


<h1>New Book</h1>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book do |f| %>
  <div class="form-group">
    <h4 class="left-align">Title</h4>
    <%= f.text_field :title, class: "vertical-align" %>
  </div>

  <div class="form-group">
    <h4 class="left-align">Body</h4>
    <%= f.text_area :body, class: "vertical-align" %>
  </div>
  
    <%= f.submit 'Create Book' , class: "submit" %>

<% end %>